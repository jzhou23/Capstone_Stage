<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head_portrait_history"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:src="@drawable/ic_person_black_48dp"
            app:civ_fill_color="@android:color/white"/>

        <TextView
            android:id="@+id/customer_name_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/head_portrait_history"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/head_portrait_todo"
            tools:text="Jiahuang Zhou" />

        <TextView
            android:id="@+id/placed_time_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            tools:text="Placed time: 05/11/2017"
            android:layout_below="@id/customer_name_history"
            android:layout_toRightOf="@id/head_portrait_history"/>

        <TextView
            android:id="@+id/price_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/holo_red_light"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            tools:text="$30" />

        <TextView
            android:id="@+id/comments_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/head_portrait_history"
            android:visibility="gone"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>