<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/head_portrait_todo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="4dp"
            android:src="@drawable/ic_person_black_48dp"
            app:civ_fill_color="@android:color/white" />

        <TextView
            android:id="@+id/customer_name_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/head_portrait_todo"
            android:layout_toRightOf="@id/head_portrait_todo"
            android:textSize="18sp"
            tools:text="Jiahuang Zhou" />

        <TextView
            android:id="@+id/time_left_todo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/holo_red_light"
            android:textSize="24sp"
            tools:text="00:05" />

        <ImageView
            android:id="@+id/food_todo"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_below="@id/head_portrait_todo"
            android:layout_margin="2dp"
            android:background="@android:color/darker_gray"
            android:scaleType="centerCrop" />

    </RelativeLayout>

</android.support.v7.widget.CardView>